{{!
    @template block_game/block

    This template renders the block.
}}
<div class="table-responsive">
    <table class="gameTable" style="width: 100%;">
        <tbody>
            <tr class="">
                <td class="cell c0 lastcol" style="">
                    <div class="t-100 text-center border-bottom">
                        <div class="text-right" style="position: absolute; top: 50px; right: 25px;">
                            {{{linkinfo}}}
                            {{{resetgame}}}
                        </div>
                        {{{userpicture}}}
                        {{#coursename}}
                            <br/>{{coursename}}
                        {{/coursename}}
                    </div>
                </td>
            </tr>
            <tr class="">
                <td class="cell c0 lastcol" style="">
                    <div class="container" style="font-size:11px; background-color: #F7F9F9;">
                        <div class="row">
                            <div class="col text-center" style="min-width:33%; max-width:100%;">
                                {{#imgscore}}
                                    {{{imgscore}}}
                                    <br/>{{labelscore}}<br/>
                                    <strong style="font-size:14px;">{{score}}</strong>
                                {{/imgscore}}
                            </div>
                            <div class="col text-center" style="min-width:33%; max-width:100%;">
                                {{#imgrank}}
                                    {{{imgrank}}}
                                    <br/>{{labelrank}}<br/>
                                    <strong style="font-size:14px;">{{rank}}ยบ / {{fullrank}}</strong>
                                {{/imgrank}}
                            </div>
                            <div class="col text-center" style="min-width:33%; max-width:100%;">
                                {{#imglevel}}
                                    {{{imglevel}}}
                                    <br/>{{labellevel}}<br/>
                                    <strong style="font-size:14px;">{{level}}</strong>
                                {{/imglevel}}
                            </div>
                        </div>
                        {{#imglevel}}
                        <div class="row">
                            <div class="col-sm">
                                <div class="progress" title="{{helpprogresslevel}}">
                                    <div class="progress-bar" role="progressbar" style="width: {{percent}}%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                        {{percent}}%
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm text-right" title="{{helpprogresslevel}}">
                                {{nextlevel}}
                            </div>
                        </div>
                        {{/imglevel}}
                    </div>
                </td>
            </tr>
            <tr class="lastrow">
                <td class="cell c0 lastcol" style="">
                    <div class="container pt-2 pb-2 border-top" style="background-color: #F7F9F9;">
                        <div class="row">
                            {{#rankgame}}
                            <div class="pl-3 col text-left" style="min-width:{{widthtools}};">
                                {{{rankgame}}}
                            </div>
                            {{/rankgame}}
                            {{#rankgroup}}
                            <div class="col text-center" style="min-width:{{widthtools}};">
                                {{{rankgroup}}}
                            </div>
                            {{/rankgroup}}
                            <div class="pr-3  col text-right" style="min-width:{{widthtools}};">
                                {{{help}}}
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>

