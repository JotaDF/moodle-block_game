{{!
    @template block_game/help

    This template renders the help.
}}
<div class="help">
    <h2>
        {{#isfrontpage}}
            ({{#str}} general, block_game {{/str}})
        {{/isfrontpage}}
        {{^isfrontpage}}
            ({{coursefullname}})
        {{/isfrontpage}}
    </h2>
    <hr><br>

    {{#notconfigured}}
        <p>...<br><br>
        {{#str}} not_initial_config_game, block_game {{/str}}
        </p>
    {{/notconfigured}}

    {{^notconfigured}}
        <table>
            {{#features}}
                <tr>
                    <td colspan="2" align="center"><h3>{{title}}</h3></td>
                </tr>
                <tr>
                    <td valign="top">
                        <img src="{{config.wwwroot}}/blocks/game/pix/{{image}}" width="80" height="80" hspace="12">
                    </td>
                    <td valign="top">
                        <p>{{{text}}}</p>
                        <hr>
                    </td>
                </tr>
            {{/features}}
        </table>
    {{/notconfigured}}
</div>
