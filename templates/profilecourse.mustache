{{!
    @template block_game/profilecourse

    This template renders the profile user in the course.
    Example context (json):
    {
      "coursename": "Matemática Aplicada - Turma B",
      "imgavatar": "<img src='https://moodle.exemplo.com/user/pix.php/123/f1.jpg' class='userpicture defaultuserpic' alt='Avatar'>",
      "username": "João da Silva",
      "imgrank": "<img src='https://moodle.exemplo.com/blocks/game/pix/rank.png' alt='Rank'>",
      "labelrank": "Classificação",
      "rank": 5,
      "fullrank": 30,
      "imgscore": "<img src='https://moodle.exemplo.com/blocks/game/pix/score.png' alt='Score'>",
      "labelscore": "Pontuação",
      "scorefull": 1580,
      "imglevel": "<img src='https://moodle.exemplo.com/blocks/game/pix/level.png' alt='Nível'>",
      "labellevel": "Nível",
      "level": "3",
      "scorelabeldetail": "Detalhamento da Pontuação",
      "scoreatvlabel": "Atividades",
      "scoreatv": 600,
      "scoremodlabel": "Módulos",
      "scoremod": 400,
      "scoresectionlabel": "Seções",
      "scoresection": 300,
      "scorebonuslabel": "Bônus",
      "scorebonus": 180,
      "scorebadgelabel": "Conquistas",
      "scorbadge": 100,
      "percent": 65,
      "helpprogresslevel": "Porcentagem para o próximo nível",
      "nextlevel": "Faltam 35% para o Nível 4",
      "labelbadges": "Distintivos conquistados",
      "outputbadges": "<div class='badge'><img src='https://moodle.exemplo.com/badge1.png' title='Explorador'></div><div class='badge'><img src='https://moodle.exemplo.com/badge2.png' title='Conquistador'></div>",
      "badgedisabled": ""
    }
}}
<div id="profiler">
    <h3>({{coursename}})</h3>
    <br>
    <div class="boxgame" id="user">
        {{{imgavatar}}}
        <strong class="h6">{{username}}</strong>
    </div>
    <div class="boxgame" id="info">
        <div class="row">
            <div class="col- ">
                <div class="container">
                    <div class="row">
                        <div class="col text-center" style="width:105px;">
                            {{{imgrank}}}
                            <br>{{labelrank}}<br>
                            <strong style="font-size:14px;">{{rank}}º / {{fullrank}}</strong>
                        </div>
                        <div class="col text-center" style="width:105px;">
                            {{{imgscore}}}
                            <br>{{labelscore}}<br>
                            <strong style="font-size:14px;">{{scorefull}}</strong>
                        </div>
                        <div class="col text-center" style="width:105px;">
                            {{{imglevel}}}
                            <br>{{labellevel}}<br>
                            <strong style="font-size:14px;">{{level}}</strong>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col- ml-4" style="min-width: 165px; font-size:12px;">
                <strong>{{scorelabeldetail}}</strong>
                <br>
                <table class="w-100 generaltable">
                    <tbody>
                        <tr>
                            <td style="font-size:12px;">{{scoreatvlabel}}:</td>
                            <td class="text-right"><strong>{{scoreatv}}</strong></td>
                        </tr>
                        <tr>
                            <td style="font-size:12px;">{{scoremodlabel}}:</td>
                            <td class="text-right"><strong>{{scoremod}}</strong></td>
                        </tr>
                        <tr>
                            <td style="font-size:12px;">{{scoresectionlabel}}:</td>
                            <td class="text-right"><strong>{{scoresection}}</strong></td>
                        </tr>
                        <tr>
                            <td style="font-size:12px;">{{scorebonuslabel}}:</td>
                            <td class="text-right"><strong>{{scorebonus}}</strong></td>
                        </tr>
                        <tr>
                            <td style="font-size:12px;">{{scorebadgelabel}}:</td>
                            <td class="text-right"><strong>{{scorbadge}}</strong></td>
                        </tr>
                    </tbody>
                </table>
                <div class="progress" title="{{helpprogresslevel}}">
                    <div class="progress-bar" role="progressbar" style="width: {{percent}}%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                        {{percent}}%
                    </div>        
                </div>
                <div class="w-100 text-right" title="{{helpprogresslevel}}">
                    {{nextlevel}}
                </div>
            </div>
        </div>
        <hr>
        <div id="emblemas">
        <h4>{{labelbadges}}</h4>
        <br>
        {{{outputbadges}}}
        {{#badgedisabled}}
            {{badgedisabled}}
        {{/badgedisabled}}
        <hr>
        </div>
    </div>
</div>