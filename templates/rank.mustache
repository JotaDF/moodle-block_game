{{!
    @template block_game/rank

    This template renders the rank.
}}
<div class="rank">
    <h3>{{coursefullname}}</h3>
    {{#showgroupmenu}}
        {{{groupmenu}}}
    {{/showgroupmenu}}

    <table class="generaltable" width="100%">
        <thead>
            <tr>
                {{#headers}}
                    <th class="cell {{class}}" align="center">{{{label}}}</th>
                {{/headers}}
            </tr>
        </thead>
        <tbody>
            {{#gamers}}
                <tr>
                    <td class="cell c0" align="center">{{{ord}}}</td>
                    <td class="cell c1">{{{user}}}</td>
                    {{#showdetails}}
                        <td class="cell c2" align="center">{{sum_score_activities}}</td>
                        <td class="cell c3" align="center">{{sum_score_module_completed}}</td>
                        <td class="cell c4" align="center">{{sum_score_section}}</td>
                        <td class="cell c5" align="center">{{sum_score_bonus_day}}</td>
                        <td class="cell c6" align="center">{{sum_score_badges}}</td>
                    {{/showdetails}}
                    <td class="cell c7" align="center">{{{score}}}</td>
                </tr>
            {{/gamers}}
        </tbody>
    </table>

    {{#notstarted}}
        <br/>({{notstarted}} {{notstartedtext}})
    {{/notstarted}}
</div>
