{{!
    @template block_game/rankgroup

    This template renders the rank group.
}}
<div class="rank">
    <h3>
        {{#isfrontpage}}
            {{#str}} general, block_game {{/str}}
        {{/isfrontpage}}
        {{^isfrontpage}}
            ({{coursefullname}})
        {{/isfrontpage}}
    </h3>
    <br/>

    {{#notconfigured}}
        <p>{{#str}} not_initial_config_game, block_game {{/str}}</p>
    {{/notconfigured}}

    {{^notconfigured}}
        <table width="100%">
            {{#groups}}
                <tr>
                    <td width="10%" align="center">{{ord}}&ordm;</td>
                    <td width="10%" align="right">{{{picture}}}</td>
                    <td width="70%" align="left">{{groupname}} ({{members}})</td>
                    <td width="10%" align="left">{{score}}{{#str}} abbreviate_score, block_game {{/str}}</td>
                </tr>
                <tr><td colspan="4"><hr/></td></tr>
            {{/groups}}
        </table>
    {{/notconfigured}}
</div>
